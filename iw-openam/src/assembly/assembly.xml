<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>bin</id>
    <baseDirectory>/</baseDirectory>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/src/main/edit-webapp/js/</directory>
            <outputDirectory>edit-webapp/js/</outputDirectory>
            <includes>
                <include>**/*.min.js</include>
            </includes>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/edit-webapp/</directory>
            <outputDirectory>edit-webapp/</outputDirectory>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/edit-webapp/config/auth/default</directory>
            <outputDirectory>edit-webapp/config/auth/default</outputDirectory>
            <includes>
                <include>*.jsp</include>
                <include>*.xml</include>
            </includes>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources/</directory>
            <outputDirectory>config</outputDirectory>
            <includes>
                <include>amAuthInWeboAuth.xml</include>
                <include>amAuthInWeboAuth.properties</include>
            </includes>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/dependency</directory>
            <outputDirectory>edit-webapp/WEB-INF/lib</outputDirectory>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>edit-webapp/WEB-INF/lib</outputDirectory>
            <includes>
                <include>iw-openam-auth-v13-${project.version}.jar</include>
            </includes>
            <excludes>
                <exclude>*-tests.jar</exclude>
                <exclude>*-javadoc.jar</exclude>
                <exclude>*-sources.jar</exclude>
            </excludes>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
    </fileSets>
</assembly>